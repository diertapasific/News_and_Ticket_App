<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="383dp"
    android:layout_height="100dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="10dp"
    android:id="@+id/cardViewSchedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:backgroundTint="#da020e"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/scheduleRletter"
                android:layout_marginTop="23dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="R1"
                android:fontFamily="@font/formula1"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/scheduleImageFlag"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/bahrain"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scheduleDate"
                android:fontFamily="@font/formula1regular"
                android:paddingTop="20dp"
                android:textSize="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:text="03 - 05 Mar"
                android:layout_width="match_parent"
                android:layout_height="33dp"/>

            <TextView
                android:id="@+id/scheduleCountry"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/formula1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#da020e"
                android:text="Bahrain"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="28dp"/>

            <TextView
                android:id="@+id/scheduleCity"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/formula1regular"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="Sakhir"
                android:layout_width="match_parent"
                android:layout_height="33dp"/>

        </LinearLayout>

    </LinearLayout>





</androidx.cardview.widget.CardView>