<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="383dp"
    android:layout_height="125dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="10dp"
    android:id="@+id/cardViewHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/historyCircuitTitle"
            android:fontFamily="@font/formula1"
            android:text="BARCELONA"
            android:textColor="#121212"
            android:textAlignment="textStart"
            android:textSize="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/historyCircuitImage"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/bahrain"/>


    </LinearLayout>


    <TextView
        android:id="@+id/historyTotalPrice"
        android:text="$240"
        android:textColor="#da020e"
        android:textAlignment="textStart"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/formula1regular"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/historyPurchaseDate"
            android:text="19 Jan 2023"
            android:textColor="#121212"
            android:textAlignment="textStart"
            android:textSize="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/formula1regular"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/historyTotalTicket"
            android:text="5x Tickets"
            android:textColor="#121212"
            android:textAlignment="textEnd"
            android:textSize="10dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/formula1regular"
            android:layout_width="100dp"
            android:layout_height="10dp" />


    </LinearLayout>



</androidx.cardview.widget.CardView>