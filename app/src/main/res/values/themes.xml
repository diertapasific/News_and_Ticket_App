<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MCS_UTS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">#121212</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#121212</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#121212</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MCS_UTS.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MCS_UTS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MCS_UTS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>